{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@/styled-system/*": ["styled-system/*"],
			"@/theme/*": ["theme/*"],
			"@app-public/*": ["./public/*"]
		},
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "es2019"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": ["node_modules"],
	"include": [
		"styled-system",
		"next-env.d.ts",
		"additional.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	]
}
